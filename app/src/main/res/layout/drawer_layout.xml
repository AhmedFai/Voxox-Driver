<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/hole">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pictures"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:id="@+id/manageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Profile"
                    android:padding="2dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/refer"
            android:textColor="#000"
            android:drawableStart="@drawable/groupsvg"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawablePadding="20dp"
            android:text="Refer"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/training"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/monitorsvg"
            android:text="Training"
            android:textColor="#000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/money"
            android:drawableStart="@drawable/credit_cardsvg"
            android:drawablePadding="20dp"
            android:text="Voxox-Money"
            android:textColor="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/news"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/newspapersvg"
            android:text="Voxox Partner-News"
            android:textColor="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/care"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/handshakesvg"
            android:text="Partner Care"
            android:textColor="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ea382e"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/logout"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/exitsvg"
            android:text="Log Out"
            android:textColor="#000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"/>




    </LinearLayout>

</ScrollView>